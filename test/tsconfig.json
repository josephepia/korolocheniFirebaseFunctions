{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      // ... other types
      "mocha"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typeRoots": ["node_modules/@types"],
  "compileOnSave": true,
  "include": [
    "src",
    "./**/*.ts"
  ],
  "exclude": ["node_modules"]
}